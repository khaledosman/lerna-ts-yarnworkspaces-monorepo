{
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "services/**/*"
      ],
      "conventionalCommits": true
    },
    "bootstrap": {
      "scope": [
        "@myscope/*"
      ]
    }
  }
}